<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:stretchColumns="1"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Tính Tiền Điện"
        android:textAlignment="center"
        android:background="@color/mainColor"
        android:textColor="@color/white"
        android:textSize="25dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên KH"
            android:textColor="@color/mainColor"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/txtCusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/secondColor"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số cũ"
            android:textColor="@color/mainColor"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/txtOldNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/secondColor"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số mới"
            android:textColor="@color/mainColor"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/txtNewNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="10dp"
            android:inputType="text"
            android:textColor="@color/secondColor" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số dùng"
            android:textColor="@color/mainColor"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/txtUsedNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/secondColor"
            android:textSize="18dp"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền"
            android:textColor="@color/mainColor"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtTotal"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/secondColor"
            android:textSize="18dp"/>

    </TableRow>

    <Button
        android:id="@+id/btnFinish"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Tính Tiền"
        android:background="@color/mainColor"
        android:textColor="@color/white">

    </Button>

</TableLayout>
